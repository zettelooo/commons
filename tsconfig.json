{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [ "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src",],
  "exclude": ["node_modules", "dist"]
}
